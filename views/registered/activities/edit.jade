extends ../layout

block content

  div.row
    div.col-md-4.col-md-offset-4
      div.page-header
        h3= "Update your " + activity.get("title") + " activity"

      if error
        div.alert.alert-danger
          p=error

      form(role="form",action="/activities/update", method="POST")
        input(type="hidden", value=activity.id, name="id")
        div.form-group
          label(for="title") Title
          input(type="text", id="title", placeholder="Title", name="title", value=activity.get("title")).form-control

        div.form-group
          label(for="description") Short description
          textarea(type="textarea", id="description", placeholder="Short description", name="description").form-control
            =activity.get("description")

        div.form-group
          label(for="min-participant") Min. participant
          input(type="text", id="min-participant", placeholder="Min participant", name="minParticipant", value=activity.get("minParticipant")).form-control

        div.form-group
          label(for="max-participant") Max. participant
          input(type="text", id="max-participant", placeholder="Max participant", name="maxParticipant", value=activity.get("maxParticipant")).form-control



        button(type="submit").btn.btn-default Update

