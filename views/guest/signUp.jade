extends layout

block content


  div.row
    div.col-md-4.col-md-offset-4
      div.page-header
        h3 Sign up

      if error
        div.alert.alert-danger
          p=error

      form(role="form",action="/do_sign_up", method="POST")
        div.form-group
          label(for="email") Email address
          input(type="email", id="email", placeholder="Email", name="email").form-control

        div.form-group
          label(for="username") Username
          input(type="text", id="username", placeholder="Username", name="username").form-control

        div.form-group
          label(for="password") Password
          input(type="password", id="password", placeholder="Password", name="password").form-control

        div.form-group
          label(for="confirmPassword") Confirm password
          input(type="password", id="confirmPassword", placeholder="Password again...", name="confirmPassword").form-control

        button(type="submit").btn.btn-default Sign up

