extends layout

block content

  div.row
    div.col-md-4.col-md-offset-4
      div.page-header
        h3 Sign in

      if error
        div.alert.alert-danger
          p=error

      form(role="form",action="/users/do_sign_in", method="POST")
        div.form-group
          label(for="username") Username
          input(type="username", id="username", placeholder="Username", name="username").form-control

        div.form-group
          label(for="password") Password
          input(type="password", id="password", placeholder="Password", name="password").form-control

        button(type="submit").btn.btn-default Sign in

